<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchUsers"
    android:background="@drawable/welcome"
    android:id="@+id/parent_layout">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/toolbar">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_users"
        android:layout_width="match_parent"
        android:layout_height="414dp"
        android:layout_below="@id/toolbar"
        ></android.support.v7.widget.RecyclerView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/invited_people_tv"
            android:background="#b0afde"
            android:padding="10dp"
            android:textColor="#000000">
        </TextView>
    </ScrollView>

    <Button
        android:id="@+id/create_mutual_event"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:padding="5dp"
        android:layout_below="@id/recycler_view_users"
        android:background="@drawable/button_pattern_two"
        android:text="Create a Mutual Event"
        android:textSize="25sp"
        android:visibility="invisible"
 />
</RelativeLayout>